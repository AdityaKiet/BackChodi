<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="textCapWords"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@mipmap/ic_user"
                app:met_iconPadding="0dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Phone"
                android:clickable="false"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="phone"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@mipmap/ic_call_dark"
                app:met_iconPadding="0dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@mipmap/ic_mail_dark"
                app:met_iconPadding="0dp" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinnerOccupation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:met_iconLeft="@mipmap/ic_mail_dark"
                app:met_iconPadding="0dp"
                app:ms_alignLabels="false"
                app:ms_arrowColor="@color/ColorPrimary"
                app:ms_arrowSize="16dp"
                app:ms_baseColor="@color/ColorPrimary"
                app:ms_errorColor="@color/ColorPrimary"
                app:ms_floatingLabelColor="@color/ColorPrimary"
                app:ms_floatingLabelText="Occupation"
                app:ms_highlightColor="@color/ColorPrimary"
                app:ms_hint="Occupation"
                app:ms_multiline="false" />


            <TextView
                android:id="@+id/txtDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/abc_edit_text_holo_light"
                android:inputType="textCapWords"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="Date of Birth"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ToggleButton
                android:id="@+id/toggleGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/abc_edit_text_holo_light"
                android:layout_marginTop="5dp"
                android:checked="false"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textOff="Male"
                android:textOn="Female"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/btnAddProfile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:background="@color/ColorPrimary"
                android:text="Upadte" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
